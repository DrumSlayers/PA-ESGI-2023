server {
    listen 80;
    server_name crm.transexpress.ovh;
    
    root /srv/dolibarr/dolibarr-17.0.2/htdocs;
    index index.php;

    location / {
        try_files $uri $uri/ =404;
    }

    location ~ \.php$ {
        include snippets/fastcgi-php.conf;
        fastcgi_pass unix:/run/php/php8.1-fpm.sock;
    }

    location ~ /\.ht {
        deny all;
    }
}